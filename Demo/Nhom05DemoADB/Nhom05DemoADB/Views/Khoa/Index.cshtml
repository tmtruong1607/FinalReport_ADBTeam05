@model IEnumerable<Nhom05DemoADB.Models.KhoaModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Quản Lý Khoa - NHOM05</h2>

<p>
    @Html.ActionLink("Thêm khoa", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Tên Khoa
        </th>
        <th>
            Năm Thành Lập
        </th>
        <th>
            Văn Phòng Khoa
        </th>
        <th>
            Thao Tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamThanhLap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item._id }) |
                @Html.ActionLink("Xem", "Details", new { id = item._id}) |
                @Html.ActionLink("Xóa", "Delete", new { id = item._id })
            </td>
        </tr>
    }

</table>
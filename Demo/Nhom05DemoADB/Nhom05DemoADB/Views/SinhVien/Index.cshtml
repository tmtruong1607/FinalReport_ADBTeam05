@model IEnumerable<Nhom05DemoADB.Models.SinhVienModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Quản Lý Sinh Viên - NHOM05</h2>

<p>
    @Html.ActionLink("Thêm sinh viên", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Họ Tên
        </th>
        <th>
            Quê Quán
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Thao Tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QueQuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item._id }) |
                @Html.ActionLink("Xem", "Details", new { id = item._id}) |
                @Html.ActionLink("Xóa", "Delete", new { id = item._id })
            </td>
        </tr>
    }

</table>

@model IEnumerable<Nhom05DemoADB.Models.HocPhanModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Quản Lý Học Phần - NHOM05</h2>

<p>
    @Html.ActionLink("Thêm học phần", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Tên Học Phần
        </th>
        <th>
            Tín Chỉ
        </th>
        <th>
            Mô Tả
        </th>
        <th>
            Thao Tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item._id}) |
                @Html.ActionLink("Xem", "Details", new { id = item._id}) |
                @Html.ActionLink("Xóa", "Delete", new { id = item._id })
            </td>
        </tr>
    }

</table>
